<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovile.Views.LoginPage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <!-- App Title -->
        <Label Text="Nom App"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#2D2235" />

        <Label Text="Connectez-vous à votre compte"
               HorizontalOptions="Center"
               TextColor="#2D2235" />

        <!-- Email -->
        <Entry x:Name="EmailEntry"
               Placeholder="Entrez votre E-Mail"
               Keyboard="Email"
               BackgroundColor="#F7F1EB"
               TextColor="Black" />

        <!-- Password with eye toggle -->
        <Grid BackgroundColor="#F7F1EB"
              Padding="0"
              ColumnDefinitions="*,Auto">

            <!-- Password Entry -->
            <Entry x:Name="PasswordEntry"
                   Grid.Column="0"
                   Placeholder="Entrez votre Mot de passe"
                   IsPassword="True"
                   BackgroundColor="Transparent"
                   TextColor="Black"/>

            <!-- Toggle eye button -->
            <ImageButton x:Name="TogglePasswordButton"
                         Grid.Column="1"
                         Source="eye_closed.png"
                         BackgroundColor="Transparent"
                         WidthRequest="30"
                         HeightRequest="30"
                         Clicked="TogglePasswordButton_Clicked"/>
        </Grid>

        <!-- Forgot password -->
        <Label Text="Mot de passe oublié ?"
               TextColor="Black"
               HorizontalOptions="End">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnForgotPasswordTapped"/>
            </Label.GestureRecognizers>
        </Label>

        <!-- Login button with loader -->
        <Grid HeightRequest="50"
              x:Name="LoginButtonGrid">

            <!-- Actual button -->
            <Button x:Name="LoginButton"
                    Text="Se connecter"
                    BackgroundColor="#E07C61"
                    TextColor="White"
                    CornerRadius="25"
                    Clicked="LoginButton_Clicked"
                    IsEnabled="True"/>

            <!-- Loader (hidden at first) -->
            <ActivityIndicator x:Name="LoginLoader"
                               IsRunning="False"
                               IsVisible="False"
                               Color="White"
                               WidthRequest="25"
                               HeightRequest="25"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
        </Grid>

        <Label Text="OU"
               HorizontalOptions="Center"
               TextColor="#2D2235" />

        <!-- Register navigation -->
        <Button Text="S’inscrire"
                BackgroundColor="White"
                TextColor="#E07C61"
                BorderColor="#E07C61"
                BorderWidth="1"
                CornerRadius="25"
                HeightRequest="50"
                Clicked="OnRegisterClicked"/>
    </VerticalStackLayout>
</ContentPage>
