<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovile.Views.RegisterPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- Title -->
            <Label Text="Créer un compte"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2D2235" />

            <!-- Full Name -->
            <Entry x:Name="FullNameEntry"
                   Placeholder="Entrez votre nom et prénom"
                   BackgroundColor="#F7F1EB"
                   TextColor="Black" />

            <!-- Email -->
            <Entry x:Name="EmailEntry"
                   Placeholder="Entrez votre E-Mail"
                   Keyboard="Email"
                   BackgroundColor="#F7F1EB"
                   TextColor="Black" />

            <!-- Password -->
            <Grid BackgroundColor="#F7F1EB"
                  Padding="0"
                  ColumnDefinitions="*,Auto">   

                <!-- Password field -->
            <Entry x:Name="PasswordEntry"
                   Grid.Column="0"
                   Placeholder="Entrez votre Mot de passe"
                   IsPassword="True"
                   BackgroundColor="Transparent"
                   TextColor="Black"/>

                <!-- Toggle button -->
            <ImageButton x:Name="TogglePasswordButton"
                 Grid.Column="1"
                 Source="eye_closed.png"
                 BackgroundColor="Transparent"
                 WidthRequest="30"
                 HeightRequest="30"
                 Clicked="TogglePasswordButton_Clicked"/>
            </Grid>

            <!-- Checkbox with wrapping text -->
            <Grid ColumnDefinitions="Auto,*" Padding="0,10,0,0">
                <CheckBox x:Name="TermsCheckBox"
                          Grid.Column="0"
                          WidthRequest="30"
                          HeightRequest="30"
                          VerticalOptions="Start"
                          HorizontalOptions="Start"
                          Margin="0,5,10,0"
                          Color="Black"/>
                <Label Grid.Column="1"
                       FontSize="12"
                       LineBreakMode="WordWrap"
                       TextColor="Black"
                       HorizontalOptions="StartAndExpand"
                       VerticalOptions="Center"
                       MaximumWidthRequest="{OnPlatform Android=250, iOS=250, WinUI=400}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="J’accepte les " TextColor="Black"/>
                            <Span Text="conditions d’utilisation " TextColor="Red"/>
                            <Span Text="et la " TextColor="Black"/>
                            <Span Text="politique de confidentialité" TextColor="Red"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>

            <!-- Loader -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsVisible="False"
                               IsRunning="False"
                               Color="#E07C61"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HeightRequest="40"
                               WidthRequest="40"/>

            <!-- Register button -->
            <Button Text="S’inscrire"
                    x:Name="RegisterButton"
                    BackgroundColor="#E07C61"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="RegisterButton_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
