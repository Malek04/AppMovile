<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovile.Views.Profile"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- HEADER -->
            <Grid BackgroundColor="#E07A5F" HeightRequest="60" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Text="Profile"
                       VerticalOptions="Center"
                       TextColor="White"
                       FontSize="20"
                       FontAttributes="Bold" />

                <ImageButton Grid.Column="1"
                             Source="back_icon.png"
                             HeightRequest="30"
                             WidthRequest="30"
                             BackgroundColor="Transparent"
                             HorizontalOptions="End"
                             Clicked="OnBackClicked"/>
            </Grid>

            <!-- PAGE CONTENT -->
            <VerticalStackLayout Spacing="15" Padding="20">

                <Label Text="Vos informations"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,10,0,0" />

                <!-- Full Name -->
                <Label Text="Nom et prénom"
                       TextColor="Black"
                       FontAttributes="Bold"
                       Margin="5,0,0,0"/>
                <Entry x:Name="FullNameEntry"
                       TextColor="Black"
                       BackgroundColor="#FAF6F2"
                       HeightRequest="45"
                       Margin="0,0,0,10"
                       HorizontalOptions="Fill"/>

                <!-- Email -->
                <Label Text="Adresse e-mail"
                       TextColor="Black"
                       FontAttributes="Bold"
                       Margin="5,0,0,0"/>
                <Entry x:Name="EmailEntry"
                       Keyboard="Email"
                       TextColor="Black"
                       BackgroundColor="#FAF6F2"
                       HeightRequest="45"
                       Margin="0,0,0,10"
                       IsReadOnly="True"
                       HorizontalOptions="Fill"/>

                <!-- Password with eye toggle -->
                <Label Text="Mot de passe"
                       TextColor="Black"
                       FontAttributes="Bold"
                       Margin="5,0,0,0"/>
                <Border Stroke="#FAF6F2" StrokeThickness="1" BackgroundColor="#FAF6F2" 
        HeightRequest="45" Margin="0,0,0,20" StrokeShape="RoundRectangle 10">
                    <Grid ColumnDefinitions="*,40">
                        <!-- Champ mot de passe -->
                        <Entry x:Name="PasswordEntry"
               IsPassword="True"
               TextColor="Black"
               BackgroundColor="Transparent"
               Margin="10,0,0,0"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Center"/>

                        <!-- Bouton œil à l'intérieur -->
                        <ImageButton x:Name="TogglePasswordButton"
                     Grid.Column="1"
                     Source="eye_closed.png"
                     BackgroundColor="Transparent"
                     Clicked="OnTogglePasswordClicked"
                     HeightRequest="20"
                     WidthRequest="20"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"/>
                    </Grid>
                </Border>


                <!-- Update Button -->
                <Button Text="Mettre à jour"
                        BackgroundColor="#E07A5F"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnUpdateClicked"
                        Margin="0,10,0,0"/>

                <BoxView HeightRequest="1" Color="LightGray" Margin="0,20,0,20"/>

                <!-- Logout Button -->
                <Button Text="Se déconnecter"
                        BackgroundColor="Transparent"
                        TextColor="#E07A5F"
                        BorderColor="#E07A5F"
                        BorderWidth="1"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnLogoutClicked"
                        Margin="0,0,0,20"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
